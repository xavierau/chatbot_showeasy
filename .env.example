APP_ENV=development
DSPY_LLM_DEFAULT_PROVIDER=gemini
DSPY_LLM_DEFAULT_MODEL=gemini-2.5-flash

GOOGLE_API_KEY=your_google_api_key_here

#langfuse
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=http://localhost:3002

# database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=showeasy

# api server
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=3010

# Event platform configuration
# Base URL for event platform (used in event URLs, help links, membership pages)
# For development/testing: https://eventplatform.test
# For production: https://showeasy.ai
EVENT_PLATFORM_BASE_URL=https://showeasy.ai

# Guardrail configuration
GUARDRAIL_STRICT_MODE=true
GUARDRAIL_AUTO_SANITIZE=true
GUARDRAIL_LOG_VIOLATIONS=true

# Notification Configuration (Booking Enquiry System)
# Strategy Pattern: Choose notification channel (log, email, whatsapp)
NOTIFICATION_CHANNEL=log
NOTIFICATION_LOG_PATH=logs/notifications.log

# Email Configuration (Gmail SMTP with SSL)
# Set NOTIFICATION_CHANNEL=email to enable
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME=ShowEasy.ai

# WhatsApp Configuration (for future whatsapp channel implementation)
# WHATSAPP_ENABLED=false
# WHATSAPP_API_KEY=your_whatsapp_api_key

# API Base URL (used for reply URLs in notifications)
API_BASE_URL=http://localhost:3010

# Mem0 Long-Term Memory Service Configuration
# Set to "false" to disable Mem0 integration entirely
MEM0_ENABLED=true

# LLM Configuration for memory extraction (using Azure OpenAI)
# IMPORTANT: Requires azure-identity and openai packages (see pyproject.toml dependencies)
MEM0_LLM_PROVIDER=azure_openai
MEM0_LLM_MODEL=gpt-4o-mini
MEM0_LLM_TEMPERATURE=0.1
MEM0_LLM_MAX_TOKENS=2000
MEM0_LLM_API_KEY=your_azure_openai_api_key
MEM0_AZURE_API_BASE=https://your-resource.openai.azure.com
MEM0_AZURE_API_VERSION=2024-02-01

# Embedder Configuration (using Azure OpenAI)
# IMPORTANT: Requires azure-identity and openai packages (see pyproject.toml dependencies)
MEM0_EMBEDDER_PROVIDER=azure_openai
MEM0_EMBEDDER_MODEL=text-embedding-3-small
MEM0_EMBEDDER_API_KEY=your_azure_openai_api_key
MEM0_EMBEDDING_DIMS=1536

# Vector Store Configuration (using local Qdrant)
# Supported: chroma, qdrant, pinecone, pgvector, milvus
MEM0_VECTOR_STORE_PROVIDER=qdrant
MEM0_VECTOR_STORE_COLLECTION=showeasy_memories
MEM0_VECTOR_STORE_HOST=localhost
MEM0_VECTOR_STORE_PORT=6333

# Qdrant API key (optional for local instance)
# MEM0_VECTOR_STORE_API_KEY=your_qdrant_api_key

# Chroma-specific (if using chroma provider)
# MEM0_VECTOR_STORE_PATH=./chroma_db

# Pinecone-specific (if using pinecone provider)
# MEM0_VECTOR_STORE_API_KEY=your_pinecone_api_key

# Mem0 API version
MEM0_VERSION=v1.1
